---
import classNames from "classnames";

interface Props {
  title: string;
  titleSide?: "left" | "right";
  alignItems?: "start" | "center" | "end" | "baseline" | "stretch";
}

const { title, titleSide = "left", alignItems = "start" } = Astro.props;

const sectionClass = classNames(
  "relative",

  "px-6",
  "lg:px-12",
  "pt-6",
  "pb-0",
  "lg:py-4",

  "flex-col",
  `items-${alignItems}`,

  "lg:flex-row",
  "lg:space-x-12",
  "lg:space-y-0",

  { "flex-row-reverse": titleSide === "right" }
);

const headingClass = classNames(
  "text-slate-700",
  "mb-2",
  "lg:mb-0",

  "dark:drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.8)]",
  "dark:text-white",

  { "text-left": titleSide === "right" }
);
---

<section>
  <!-- desktop -->
  <div class={classNames(sectionClass, "hidden", "lg:flex")}>
    <div class="flex-1 text-right flex flex-row justify-end">
      {
        titleSide === "left" ? (
          <div>
            <h1 class={headingClass}>{title}</h1>
            <slot name="title" />
          </div>
        ) : (
          <slot />
        )
      }
    </div>
    <div class="flex-1">
      {
        titleSide === "right" ? (
          <div>
            <h1 class={headingClass}>{title}</h1>
            <slot name="title" />
          </div>
        ) : (
          <slot />
        )
      }
    </div>
  </div>

  <!-- mobile -->
  <div class={classNames(sectionClass, "lg:hidden")}>
    <h1 class={headingClass}>{title}</h1>
    <slot name="title" />
    <slot />
  </div>
</section>
