---
import classNames from "classnames";

interface Props {
  text: string;
  href: string;
  size?: "md" | "sm";
  classname?: string;
}

const defaults = {
  size: "md",
};

const { text, href, size, classname } = { ...defaults, ...Astro.props };

const containerClass = classNames(
  "inline-block",
  "my-2",
  "transition-all",
  "hover:-translate-y-1",
  classname
);

const buttonClass = classNames(
  "inline-block",
  "bg-purple-600",
  "hover:bg-purple-500",
  "transition-all",
  "text-white",
  "rounded-full",
  "drop-shadow-lg",
  { "px-6": size === "md" },
  { "px-4": size === "sm" },
  { "py-3": size === "md" },
  { "py-1": size === "sm" }
);
---

<div class={containerClass}>
  <a href={href} target="_blank" class={buttonClass}>{text}</a>
</div>
